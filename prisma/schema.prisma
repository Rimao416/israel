generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  avatar    String?
  qrCode    String   @unique // Le code unique qui sera encod√© dans le QR
  qrCodeUrl String?  // URL de l'image du QR code (optionnel)
  bio       String?  @db.Text
  address   String?
  city      String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  scans     Scan[]

  @@map("users")
}

model Scan {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scannedAt  DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  location   String?

  @@map("scans")
  @@index([userId])
  @@index([scannedAt])
}